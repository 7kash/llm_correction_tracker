# Mock Mode - Set to 'true' to use simulated LLM (no API key needed)
# Set to 'false' to use real OpenAI API
USE_MOCK_MODE=true

# OpenAI API Key (only needed if USE_MOCK_MODE=false)
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000
